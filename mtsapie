<!DOCTYPE html>
<html>
  <head>
    <title>conversor metro a pie</title>
    <script>
      function multiplicación() {
        if (!document.getElementById("textmts").value) {
          alert("ingrese cantidad de metros");
        } else {
          var mts = document.getElementById("textmts").value;
          var resultado = parseFloat(mts) * 3.28;
          document.getElementById("textpie").value = resultado;
        }
      }
    </script>
  </head>
  <body>
    Metros <br />
    <input type="text" id="textmts" /> <br />
    Pie <br />
    <input type="text" id="textpie" /> <br />
    <input
      type="button"
      id="btncalcular"
      value="convertir"
      onclick="multiplicación()"
    />
    <br />
  </body>
</html>
